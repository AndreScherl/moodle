<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="blocks/custom_category/db" VERSION="20120625" COMMENT="XMLDB file for Moodle blocks/custom_category"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="block_custom_category" COMMENT="Zusatzinformationen für Kursbereiche" NEXT="category_course_link">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true" NEXT="categoryid"/>
        <FIELD NAME="categoryid" TYPE="int" LENGTH="11" NOTNULL="true" UNSIGNED="false" SEQUENCE="false" COMMENT="ID des Kursbereiches" PREVIOUS="id" NEXT="background_image"/>
        <FIELD NAME="background_image" TYPE="text" LENGTH="medium" NOTNULL="false" SEQUENCE="false" PREVIOUS="categoryid" NEXT="headline"/>
        <FIELD NAME="headline" TYPE="text" LENGTH="medium" NOTNULL="false" SEQUENCE="false" COMMENT="Überschrift für den Kursbereich" PREVIOUS="background_image" NEXT="timemodified"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="11" NOTNULL="false" UNSIGNED="false" SEQUENCE="false" PREVIOUS="headline"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="idx_id" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="idx_categoryid" UNIQUE="false" FIELDS="categoryid"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="category_course_link" COMMENT="Verlinkungen von Kursen in den Kategoriebereich" PREVIOUS="block_custom_category">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true" NEXT="courseid"/>
        <FIELD NAME="courseid" TYPE="int" LENGTH="11" NOTNULL="false" UNSIGNED="false" SEQUENCE="false" PREVIOUS="id" NEXT="category"/>
        <FIELD NAME="category" TYPE="int" LENGTH="11" NOTNULL="false" UNSIGNED="false" SEQUENCE="false" PREVIOUS="courseid" NEXT="aftercourseid"/>
        <FIELD NAME="aftercourseid" TYPE="int" LENGTH="11" NOTNULL="false" UNSIGNED="false" SEQUENCE="false" PREVIOUS="category" NEXT="sortorder"/>
        <FIELD NAME="sortorder" TYPE="number" LENGTH="10" NOTNULL="false" UNSIGNED="false" SEQUENCE="false" DECIMALS="1" PREVIOUS="aftercourseid" NEXT="suborder"/>
        <FIELD NAME="suborder" TYPE="int" LENGTH="11" NOTNULL="false" UNSIGNED="false" SEQUENCE="false" PREVIOUS="sortorder" NEXT="timecreated"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="11" NOTNULL="false" UNSIGNED="false" SEQUENCE="false" PREVIOUS="suborder" NEXT="timemodified"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="11" NOTNULL="false" UNSIGNED="false" SEQUENCE="false" PREVIOUS="timecreated"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="idx_catid_aftercourseid" UNIQUE="false" FIELDS="category, aftercourseid" NEXT="idx_catid_aftercid_suborder"/>
        <INDEX NAME="idx_catid_aftercid_suborder" UNIQUE="false" FIELDS="category, aftercourseid, suborder" PREVIOUS="idx_catid_aftercourseid" NEXT="idx_catid_suborder"/>
        <INDEX NAME="idx_catid_suborder" UNIQUE="false" FIELDS="category, suborder" PREVIOUS="idx_catid_aftercid_suborder" NEXT="idx_catid"/>
        <INDEX NAME="idx_catid" UNIQUE="false" FIELDS="category" PREVIOUS="idx_catid_suborder" NEXT="idx_id_aftercourseid"/>
        <INDEX NAME="idx_id_aftercourseid" UNIQUE="false" FIELDS="id, aftercourseid" PREVIOUS="idx_catid"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>