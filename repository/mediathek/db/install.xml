<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="repository/mediathek/db" VERSION="20130130" COMMENT="Database tables for the mediathek repository"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="repository_mediathek" COMMENT="Stores the settings and cache for mediathek">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="settings" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Serialised settings and cache"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="repository_mediathek_link" COMMENT="Stores links inserted from the mediathek repository">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="url" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="The URL of the file to retrieve"/>
        <FIELD NAME="hash" TYPE="char" LENGTH="40" NOTNULL="true" SEQUENCE="false" COMMENT="The SHA1 hash of the file url"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="hash" UNIQUE="true" FIELDS="hash"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>